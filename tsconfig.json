{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./target/classes/static/",
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "allowJs": true
  },
  "include": [
    "src/main/resources/static/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}